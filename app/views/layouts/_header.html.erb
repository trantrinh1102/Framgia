<div id="header">
  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div>
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse"
            data-target=".navbar-ex1-collapse">
          <span class="sr-only"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <span><img alt="Icon" src="/assets/Framgia_icon.png"/></span>
        <%= link_to t("static_page.elearning"), root_path,
          class: "bar-brand" %>
      </div>
      <div class="collapse navbar-collapse navbar-ex1-collapse">
        <ul class="nav navbar-nav navbar-right">
          <li>
            <%= link_to root_path do %>
              <i class="glyphicon glyphicon-home">
              <%=t "static_page.home" %></i>
            <% end %>
          </li>
          <% if logged_in? %>
            <li>
              <%= link_to users_path do %>
                <i class="glyphicon glyphicon-user">
                <%=t "static_page.all_user" %></i>
              <% end %>
            </li>
            <%= link_to session_path("current"), class: "btn btn-danger
              navbar-btn", method: "delete" do %>
              <i class="glyphicon glyphicon-log-out">
              <%= t "static_page.logout" %></i>
            <% end %>
            <span class="dropdown dropdown-user">
              <%= link_to "#", class: "btn btn-info navbar-btn",
                data: {toggle: "dropdown"} do %>
                <i class="glyphicon glyphicon-cog">
                <%=current_user.name %></i>
              <% end %>
              <ul class="dropdown-menu">
                <li><%= link_to t("static_page.profile"), current_user %></li>
                <li class="divider"></li>
                <li><%= link_to t("static_page.settings"), edit_user_path(current_user) %>
                </li>
              </ul>
            </span>
          <% else %>
            <%= link_to signup_path, class: "btn btn-danger navbar-btn" do %>
              <i class="glyphicon glyphicon-plus-sign">
               <%= t "static_page.signup" %></i>
            <% end %>
            <%= link_to new_session_path, class: "btn btn-info navbar-btn" do %>
              <i class="glyphicon glyphicon-log-in">
              <%= t "static_page.signin" %></i>
            <%end%>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</div>
