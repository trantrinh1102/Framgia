<%= form_for @user do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>
  <%= f.label :email %>
  <%= f.email_field :email, class: "form-control" %>
  <%= f.label :password %>
  <%= f.password_field :password, class: "form-control" %>
  <%= f.label :password_confirmation, t("user.passconfir") %>
  <%= f.password_field :password_confirmation, class: "form-control" %>
  <%= f.label :phone %>
  <%= f.text_field :phone, class: "form-control" %>
  <%= f.label :gender %>
  <%= f.select :gender,[[t("user.gender.female"), true],
    [t("user.gender.male"), false]],
    prompt: t("user.gender.select"), required: true,
    placeholder: t("user.gender_holder"),
    class: "form-control" %>
  <%= f.submit logged_in? ? t("user.save") : t("user.signup"),
    class: "btn btn-primary" %>
<% end %>
